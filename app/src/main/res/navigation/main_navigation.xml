<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ekosoftware.misrecetas.presentation.main.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_recipeDetailFragment"
            app:destination="@id/recipeDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_homeFragment_to_addEditRecipeFragment"
            app:destination="@id/addEditRecipeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="com.ekosoftware.misrecetas.presentation.main.ui.details.RecipeDetailsFragment"
        android:label="{name}"
        tools:layout="@layout/fragment_recipe_details">
        <argument
            android:name="name"
            app:argType="string" />
        <action
            android:id="@+id/action_recipeDetailFragment_to_addEditRecipeFragment"
            app:destination="@id/addEditRecipeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_recipeDetailFragment_to_cookFragment"
            app:destination="@id/cookFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/addEditRecipeFragment"
        android:name="com.ekosoftware.misrecetas.presentation.main.ui.addedit.AddEditRecipeFragment"
        tools:layout="@layout/fragment_add_edit_recipe">
        <argument
            android:name="recipe"
            app:argType="com.ekosoftware.misrecetas.domain.model.Recipe"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/cookFragment"
        android:name="com.ekosoftware.misrecetas.presentation.main.ui.cook.CookFragment"
        android:label="{name}"
        tools:layout="@layout/fragment_cook">
        <argument
            android:name="recipe"
            app:argType="com.ekosoftware.misrecetas.domain.model.Recipe" />
        <argument
            android:name="name"
            app:argType="string" />
    </fragment>
</navigation>